---
import { TAGS } from "@/data/tags";
---

<div
  class="flex items-center justify-center flex-wrap gap-2 py-4 md:max-w-2xl md:mx-auto"
>
  {
    TAGS.map(({ name, slug }) => {
      return (
        <a href={`/${slug}`} class="pointer-events-none">
          <span class="bg-gray-700 text-gray-300 text-sm font-medium px-3 py-1 rounded-lg transition-all duration-300 hover:bg-gray-600">
            {name}
          </span>
        </a>
      );
    })
  }
</div>
